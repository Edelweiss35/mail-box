        </section>
    
        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-md-3">
              <a href="/mailbox" class="btn btn-primary btn-block margin-bottom">Back to Inbox</a>
    
              <div class="hpanel responsive-mg-b-30">
                <div class="panel-body">
                    <ul class="mailbox-list">
                        <li>
